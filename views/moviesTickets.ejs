<%- include('./partials/navBar') %>
<div class="container mt-1">
    <h1>Booked Tickets</h1>
<% for(let i = 0; i < tickets.length; i++) { %>
    <div class="card mb-3 mx-5 col-lg-6 col-md-6">
        <div class="card-body">
            <h5 class="card-title">Movie: <%= tickets[i].movieTitle %></h5>
            <p class="card-text">Confirmation Number: <%= tickets[i]._id %></p>
            <p class="card-text">Showtime: <%= tickets[i].showtime %></p>
            <p class="card-text">Seat Number: <%= tickets[i].seatNumber %></p>
            <p class="card-text">Customer Name: <%= tickets[i].customerName %></p>
            <p class="card-text">Customer Email: <%= tickets[i].customerEmail %></p>
            <form action="/movies/tickets/<%= tickets[i]._id %>?_method=DELETE" method="post">
                <button type="submit" class="btn btn-danger">Cancel Ticket</button>
            </form>
        </div>
    </div>
<% } %>
<a href="/movies" class="btn btn-secondary">Back to Movies</a>

</div>

</body>
</html>